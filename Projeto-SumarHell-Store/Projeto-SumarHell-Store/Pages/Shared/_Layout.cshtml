<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projeto_SumarHell_Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projeto_SumarHell_Store.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-logo box-shadow mb-3">
            <div class="container">
                <img src="Img/Logo.jpg" alt="logo" id="img-logo">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between flex-grow-0">
                    <ul class="navbar-nav">

                        <a class="nav-link" asp-area="" asp-page="/Index" style="font-size: 28px;">
                            <li class="nav-item text-logo-red">
                                Início
                            </li>
                        </a>

                        <a class="nav-link" asp-area="" asp-page="/Index" style="font-size: 28px;">
                            <li class="nav-item text-logo-red">
                                Loja
                            </li>
                        </a>

                        <a class="nav-link" asp-area="" asp-page="/Index" style="font-size: 28px;">
                            <li class="nav-item text-logo-red">
                                Quem somos
                            </li>
                        </a>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted bg-logo">
        <div class="container textnohover-logo-red" >
            Projeto_SumarHell_Store - Dev Gabriel
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>